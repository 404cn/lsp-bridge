{
  "name": "kotlin-language-server",
  "languageId": "kotlin",
  "command": [
    "kotlin-language-server"
  ],
  "ignore-diagnostic": "# type: ignore",
  "settings": {
    "kotlin.externalSources.autoConvertToKotlin": true,
    "kotlin.externalSources.useKlsScheme": true,
    "kotlin.debugAdapter.path": "",
    "kotlin.debugAdapter.enabled": true,
    "kotlin.completion.snippets.enabled": true,
    "kotlin.linting.debounceTime": 250,
    "kotlin.compiler.jvm.target": "11",
    "kotlin.trace.server": "off"
  }
}
